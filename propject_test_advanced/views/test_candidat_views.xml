<odoo>
    <!--menus views-->
        <!--menu list to form-->
        <record id="test_candidat_rif_2025_menu" model="ir.actions.act_window">
            <field name="name">test_candidat List-Form</field>
            <field name="res_model">test_candidat.rif.2025</field>
            <field name="view_mode">list,form</field>
            
        </record>
        <!--list view-->
        <record id="test_candidat_rif_2025_list" model="ir.ui.view">
            <field name="name">test_candidat List</field>
            <field name="model">test_candidat.rif.2025</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="poste"/>
                    <field name="departement"/>
                    <field name="is_accepted"/>
                </list>
            </field>
        </record>
    
</odoo>