<odoo>

    <record id="estate_search_view" model="ir.ui.view">
        <field name="name">real.estate.view.search</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <filter name="filter_state_name" string="New" domain="[('name', '=', 'house')]"/>
                <filter name="group_by_name" string="name" context="{'group_by': 'name'}"/>
            </search>
        </field>
    </record>
    <record id="estate_form_view" model="ir.ui.view">
        <field name="name">real.estate.view.form</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </group>

                    <group>
                        <field name="estate_type_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                        <field name="price"/>
                    </group>
                    <group string="Options">
                        <field name="garden"/>
                        <field name="garage"/>
                    </group>

                    <!-- Groupe pour surface -->
                    <group string="Surface Information">
                        <field name="living_area"/>
                        <field name="garden_area"/>
                        <field name="total_area" readonly="1"/>
                    </group>
                   
                    <notebook>
                        <page string="Offers">
                            <field name="offer_ids">
                                <list editable="bottom">
                                    <field name="price"/>
                                    <field name="status"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="date_deadline"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="test_record" model="ir.actions.act_window">
        <field name="name">Test Record</field>
        <field name="res_model">real.estate</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>