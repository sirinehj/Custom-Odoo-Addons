<odoo>
    <!-- TREE view -->
    <record id="estate_tag_tree_view" model="ir.ui.view">
        <field name="name">real.estate.tag.list</field>
        <field name="model">real.estate.tag</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- FORM view -->
    <record id="estate_tag_form_view" model="ir.ui.view">
        <field name="name">real.estate.tag.form</field>
        <field name="model">real.estate.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="estate_tag_action" model="ir.actions.act_window">
        <field name="name">Estate Tags</field>
        <field name="res_model">real.estate.tag</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>