<odoo>

    <!-- TREE view -->
    <record id="estate_offer_tree_view" model="ir.ui.view">
        <field name="name">real.estate.offer.list</field>
        <field name="model">real.estate.offer</field>
        <field name="arch" type="xml">
            <list>
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
                <field name="estate_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </list>
        </field>
    </record>

    <!-- FORM view -->
    <record id="estate_offer_form_view" model="ir.ui.view">
        <field name="name">real.estate.offer.form</field>
        <field name="model">real.estate.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                        <field name="estate_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="estate_offer_action" model="ir.actions.act_window">
        <field name="name">Estate Offers</field>
        <field name="res_model">real.estate.offer</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>