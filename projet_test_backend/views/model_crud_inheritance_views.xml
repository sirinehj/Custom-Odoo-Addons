<odoo>
    <!--menu view-->
    <record id="model_crud_inheritance_menu" model="ir.actions.act_window">
        <field name="name">Model CRUD</field>
        <field name="res_model">model.crud_modified</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>
    <!--tree view-->
    <record id="model_crud_inheritance_list_view" model="ir.ui.view">
        <field name="name">Model CRUD</field>
        <field name="model">model.crud_modified</field>
        <field name="arch" type="xml">
            <list string="model_crud_inheritance tree list">
                <field name="field1"/>
                <field name="field2"/>
                <field name="field3"/>
            </list>
        </field>
    </record>
    <!--form view-->
    <record id="model_crud_inheritance_form_view" model="ir.ui.view">
        <field name="name">Model CRUD</field>
        <field name="model">model.crud_modified</field>
        <field name="arch" type="xml">
            <form string="model_crud_inheritance form">
                <sheet>
                    <group>
                        <field name="field1"/>
                        <field name="field2"/>
                        <field name="field3"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
</odoo>