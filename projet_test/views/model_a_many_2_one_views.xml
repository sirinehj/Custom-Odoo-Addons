<odoo>
    <!--menu view-->
    <record id="model_a_many2one_menu_view" model="ir.actions.act_window">
        <field name="name">Testing_01 Model A many2one</field>
        <field name="res_model">model.a.many2one</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>
    <!--tree view-->
    <record id="model_a_many2one_list_view" model="ir.ui.view">
        <field name="name">Testing_01 Model A many2one tree view</field>
        <field name="model">model.a.many2one</field>
        <field name="arch" type="xml">
            <list string="Model A many2one tree list">
                  <field name="name"/>
            </list>
        </field>
    </record>
    <!--form view-->
    <record id="model_a_many2one_form_view" model="ir.ui.view">
        <field name="name">Testing_01 Model A many2one form view</field>
        <field name="model">model.a.many2one</field>
        <field name="arch" type="xml">
            <form string="Model A many2one form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--search view-->
    <record id="model_a_many2one_search_view" model="ir.ui.view">
        <field name="name">Testing_01 Model A many2one search view</field>
        <field name="model">model.a.many2one</field>
        <field name="arch" type="xml">
            <search string="Model A many2one tree list">
                  <field name="name"/>
                  <filter name="group_by_name_of_model_a_many2one" context="{'group_by':'name'}"/>
            </search>
        </field>
    </record>
</odoo>