<odoo>
    <!--menu view-->
    <record id="model_a_one2many_menu_view" model="ir.actions.act_window">
        <field name="name">Testing_01 Model A one2many</field>
        <field name="res_model">model.a.one2many</field>
        <field name="view_mode">list,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>
    <!--tree view-->
    <record id="model_a_one2many_list_view" model="ir.ui.view">
        <field name="name">Testing_01 Model A one2many tree view</field>
        <field name="model">model.a.one2many</field>
        <field name="arch" type="xml">
            <list string="Model A one2many tree list">
                  <field name="name"/>
                  <field name="model_b_one2many_id"/>
            </list>
        </field>
    </record>
    <!--form view-->
    <record id="model_a_one2many_form_view" model="ir.ui.view">
        <field name="name">Testing_01 Model A one2many form view</field>
        <field name="model">model.a.one2many</field>
        <field name="arch" type="xml">
            <form string="Model A one2many form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="model_b_one2many_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--search view-->
    <record id="model_a_one2many_search_view" model="ir.ui.view">
        <field name="name">Testing_01 Model A one2many search view</field>
        <field name="model">model.a.one2many</field>
        <field name="arch" type="xml">
            <search string="Model A one2many tree list">
                  <field name="name"/>
                  <field name="model_b_one2many_id"/>
                  <filter name="group_by_name_of_model_a_one2many" context="{'group_by':'name'}"/>
                  <filter name="group_by_model_b_one2many" context="{'group_by':'model_b_one2many_id'}"/>
            </search>
        </field>
    </record>
</odoo>