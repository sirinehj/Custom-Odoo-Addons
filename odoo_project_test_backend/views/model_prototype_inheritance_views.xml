<odoo>
    <!--menu view-->
    <record id="model_prototype_inheritance_menu" model="ir.actions.act_window">
        <field name="name">Model Prototype Inheritance</field>
        <field name="res_model">model.proto</field>
        <field name="view_mode">list,form</field>
    </record>
    <!--tree list view-->
    <record id="model_prototype_inheritance_list" model="ir.ui.view">
        <field name="name">Model Prototype Inheritance list</field>
        <field name="model">model.proto</field>
        <field name="arch" type="xml">
            <list>
                <field name="field1"/>
                <field name="field2"/>
            </list>
        </field>
    </record>
    <!--form view-->
    <record id="model_prototype_inheritance_form" model="ir.ui.view">
        <field name="name">Model Prototype Inheritance form</field>
        <field name="model">model.proto</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="field1"/>
                    </group>
                    <group>
                        <field name="field2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>